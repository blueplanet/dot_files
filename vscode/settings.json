{
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": false,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": false,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.format.placeOpenBraceOnNewLineForControlBlocks": false,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
  // [開いているエディター] ウィンドウに表示されているエディターの数。0 に設定するとウィンドウが非表示になります。
  "explorer.openEditors.visible": 0,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.showTabs": true,
  "editor.renderControlCharacters": true,
  // プレビューを禁止すれば、tab が上書きされない
  "workbench.editor.enablePreview": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "workbench.statusBar.visible": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.fontFamily": "Fira Code, Ricty Diminished, Source Han Code JP, Menlo, Monaco, 'Courier New', monospace",
  "workbench.list.keyboardNavigation": "simple",
  "files.trimTrailingWhitespace": true,
  "editor.minimap.enabled": false,
  "workbench.colorCustomizations": {
    "terminal.background": "#000", //背景
    "terminal.foreground": "#01fc55", //デフォルトカラー
    "terminalCursor.background": "#A5A2A2",
    "terminalCursor.foreground": "#A5A2A2"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "editor.suggest.showSnippets": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",
  "markdown-preview-enhanced.mermaidTheme": "forest",
  "ruby.intellisense": "rubyLocate",
  "markdown-preview-enhanced.breakOnSingleNewLine": true,
  "oneDarkPro.vivid": true,
  "oneDarkPro.bold": true,
  "workbench.colorTheme": "Solarized Light",
  "extensions.ignoreRecommendations": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotShowInfoMsg": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "ruby.specCommand": "bin/rspec",
  "liveServer.settings.donotVerifyTags": true,
  "ruby.useLanguageServer": true,
  "ruby.lint": "rubocop",
  "ruby.format": "rubocop",
  "ruby.rubocop.configFilePath": ".rubocop.yml",
  "editor.formatOnSave": true,
  "prettier.configPath": ".prettierrc",
  "indentRainbow.colors": [
    "rgba(255,127,127,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(127,127,255,0.3)",
    "rgba(255,127,127,0.5)",
    "rgba(127,255,127,0.5)",
    "rgba(127,127,255,0.5)",
    "rgba(255,0,0,0.3)",
    "rgba(0,255,0,0.3)",
    "rgba(0,0,255,0.3)",
    "rgba(255,0,0,0.5)",
    "rgba(0,255,0,0.5)",
    "rgba(0,0,255,0.5)"
  ],
  "go.toolsManagement.autoUpdate": true,
  "files.associations": {
    "*.erb": "erb"
  },
  "editor.cursorStyle": "line",
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "workbench.activityBar.visible": false,
  "security.workspace.trust.untrustedFiles": "open",
  "dart.debugExternalLibraries": false,
  "dart.debugSdkLibraries": false,
  "redhat.telemetry.enabled": true,
  "workbench.list.automaticKeyboardNavigation": false,
  "yaml.maxItemsComputed": 50000,
  "window.zoomLevel": 2,
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "git.autofetch": true
}
